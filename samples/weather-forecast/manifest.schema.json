{
  "$id": "ManifestSchema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Staffbase Widget Manifest Schema",
  "type": "object",
  "required": ["bundles", "flag"],
  "properties": {
    "flag": {
      "type": "object",
      "required": ["protected", "description", "title"],
      "properties": {
          "protected": { "type": "boolean" },
          "description": { "type": "string" },
          "title": { "type": "string" }
      }
    },
    "bundles": {
      "type": "array",
      "minItems": 1,
      "items": {
          "type": "object",
          "required": ["bundle", "tagName", "attributes"],
          "properties": {
              "bundle": { "type": "string" },
              "tagName": { "type": "string" },
              "attributes": { 
                  "type": "array",
                  "items": { "type": "string" }
              }
          }
        }
    }
  }
  
}