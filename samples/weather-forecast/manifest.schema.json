{
  "$id": "ManifestSchema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Staffbase Widget Manifest Schema",
  "type": "object",
  "required": ["bundles", "flag"],
  "properties": {
    "flag": {
      "type": "object",
      "required": ["protected", "description", "title"],
      "properties": {
          "protected": { "type": "boolean" },
          "description": { "type": "string" },
          "title": { "type": "string" }
      }
    },
    "bundles": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
          "type": "object",
          "required": ["bundle", "tagName", "attributes"],
          "properties": {
              "bundle": { 
                "type": "string",
                "description": "Relative path to bundle file"
              },
              "tagName": {
                "type": "string",
                "description": "The tag name of the web component",
                "pattern": "^([a-zA-Z0-9]*-[a-zA-Z0-9]*)+$"
              },
              "attributes": { 
                  "type": "array",
                  "items": {
                    "type": "string",
                    "description": "Web component attribute names of bundle",
                    "pattern": "^[a-zA-Z]+$"
                  }
              }
          }
        }
    }
  }
  
}